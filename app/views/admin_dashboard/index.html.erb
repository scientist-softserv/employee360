<h1 class="mt-3">Admin Area - All Employees</h1>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-4 mb-3 text-center">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= user.name %></h4>
          <h6 class="card-text"><%= user.title %></h6>
          <p class="card-text"><i class="bi bi-envelope-at"></i> <%= user.email %></p>
          <p class="card-text"><i class="bi bi-github"></i> <%= user.github_handle %></p>
          <%= link_to "Profile", user_path(user), class: "btn btn-primary me-1" %>
          <%= link_to "Goals", user_goals_path(user, @goal), class: "btn btn-success me-1" %>
          <%= link_to "Salary History", user_salary_histories_path(user, @salary_history), class: "btn btn-warning me-1" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= button_to "Employee360 Portal", root_url, class: "btn btn-secondary me-1", method: :get %>
</div>
